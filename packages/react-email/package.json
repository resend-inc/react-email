{
  "name": "react-email",
  "version": "1.0.6",
  "description": "A live preview of your emails right in your browser.",
  "bin": {
    "email": "./dist/index.js"
  },
  "exports": [
    "./dist/index.js",
    "./preview"
  ],
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=14.16"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json}\"",
    "format": "prettier --write \"**/*.{js,ts,tsx,json}\"",
    "lint": "eslint",
    "clean": "rm -rf dist"
  },
  "license": "MIT",
  "dependencies": {
    "@commander-js/extra-typings": "9.4.1",
    "chokidar": "3.5.3",
    "commander": "9.4.1",
    "cpy": "8.1.2",
    "glob": "8.0.3",
    "shelljs": "0.8.5"
  },
  "devDependencies": {
    "@types/node": "18.11.9",
    "@types/shelljs": "0.8.11",
    "prettier": "2.7.1"
  }
}
