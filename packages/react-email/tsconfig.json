{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "tsconfig/nextjs.json",
  "include": [
    "./**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    ".next/**/*",
    "emails",
    "tsconfig.export.json",
    "./cli",
    "node_modules"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
    },
    "types": ["vitest/globals"],
    "outDir": "dist"
  }
}
